        <iconPacks:PackIconEntypo x:Name="iconUsers" Kind="Users" Foreground="White" Width="90" Height="90" Margin="199,87,0,0" IsHitTestVisible="False" Focusable="False" />
        <iconPacks:PackIconEntypo x:Name="iconShop" Kind="Shop" Foreground="White" Width="90" Height="90" Margin="355,87,0,0" IsHitTestVisible="False" Focusable="False" />
    </Grid>
</Window>
