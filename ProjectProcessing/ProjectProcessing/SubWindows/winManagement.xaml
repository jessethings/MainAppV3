        <Custom:Tile x:Name="butUsers" Title="Users" HorizontalTitleAlignment="Center" TitleFontSize="32"
            TiltFactor="2"
            Width="150" Height="150" 
            Count="" Margin="169,74,326,51" Custom:ButtonHelper.CornerRadius="0" Cursor="Hand" FontFamily="Calibri Light" FontSize="36" Background="#FFFEE538" Click="butUsers_Click"/>

        <Custom:Tile x:Name="butFarms" Title="Farms" HorizontalTitleAlignment="Center" TitleFontSize="32"
